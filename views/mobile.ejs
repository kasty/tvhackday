<!DOCTYPE html>
<html>
<head>
	<title>Join the band !</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='/stylesheets/jointheband.css' />
    <script src="/javascripts/jquery-1.11.1.js"></script>
	<script src="/socket.io/socket.io.js"></script>
</head>
<body>
  	<header>
		<h1>Yo ** <%= name %> **, you are so beautiful !</h1>
	</header>
	<div id="main">
		<div id="buttons">
			<a href="javascript:void(0);" id="btn1" class="btn"></a>
			<a href="javascript:void(0);" id="btn2" class="btn"></a>
		</div>
	</div>

<script type="text/javascript">
var socket = io();

(function($) {
	$(document).on('ready', function(event) {

		var notifyKick = function(data) {
			socket.emit('kick_event', data);
		};

		$('#btn1').on('touchstart', function(event) { 
			event.preventDefault();
			notifyKick({type: 1, name: '<%= name %>'});
		});

		$('#btn2').on('touchstart', function(event) { 
			event.preventDefault();
			notifyKick({type: 2, name: '<%= name %>'});
		});

	});
})(jQuery);
</script>

</body>
</html>
